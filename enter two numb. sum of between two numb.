/*정수a,b를 포함해서 그 사이의 모든 정수의 합을구하는 아래 함수로 만들기 */

#include <stdio.h>

int sumof(int a, int b) {
    int min, max;
    int sum = 0;
    if (a != b) {
        if (a>b) max = a, min = b;
        else if (b>a) min = a, max = b;
        
        for (int i = min; min <= max; min++) {
            sum += min;
        }
    }
    else if (a == b) {
        return a;
    }
    return  sum;
}

int main() {
    int a, b;
    puts("두 수를 입력하면 사이값을 합해줄게용");
    printf("a : ");    scanf("%d", &a);
    printf("b : ");    scanf("%d", &b);
    
    if (a == b) {
        printf("같은 수를 입력하심 안되죠...");
    }
    else if (a != b) {
         printf("%d, %d 사이 정수들의 합 : %d", a, b, sumof(a, b));
    }
}
