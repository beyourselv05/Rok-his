#include <stdio.h>

void spira(int n)
{
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        for(int k = 1; k <= (i-1)*2+1; k++) {       /* (i-1)*2+1?? */
            printf("*");
        }
        printf("\n");
    }
}

void nrpira(int n) {
    for (int i=1; i <= n; i++) {
        for (int j = 1; j < i-1; j++) {
            printf(" ");
        }
        for (int k = 1; k <= (n - i)*2+1; k++) {
            printf("%d", i%10);
        }
        printf("\n");
    }
} 

int main(void)
{
    int n;

    do {
        printf("크기: ");
        scanf("%d", &n);
    } while (n <= 0);

    printf("\nmake a spira!!\n");   spira(n);
    printf("\nmake a nrpira!!\n");  nrpira(n);

    return 0;
}
